@model List<Producto>

@{
    ViewData["Title"] = "Home Page";
}
    <section class="jumbotron text-center">

	<div class="container">
       
    
     
            <div class="row">

                 @if (Model.Count == 0) {

                     <section class="jumbotron text-center">
                         <div class="container">
                              <h1 class="jumbotron-heading">No se encontraron registros</h1>
                              <p class="lead text muted">
                                  Todavía no se ha registrado ningún pedido de compra, si usted desea hacerlo vaya a la sección de registro
                              </p>
                         </div>
                    </section>
                  
                }
            
 
                @foreach (var producto in Model)
                {
                
                    
                    
                        <div class="card col-sm-3" style=" margin:10px; padding:10px;">
                            <img class="card-img-top" src="@producto.urlProduct" style="height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">@producto.nameProduct</h5>
                                <p class="card-text">@producto.describeProduct</p>
                                <p class="card-text">
                                <small class="text-muted">S/.@producto.priceProduct</small>
                                <a asp-action="Details" asp-route-id="@producto.Id">Detalles</a>| 
                                </p>
                            </div>
                        </div>
                 

                }

            </div>

	



    </div>

    </section>